<?xml version="1.0"?>
<launch>
  <!-- 
    Launch only the Livox Mid360 driver
    Useful for testing sensor connectivity and data output
  -->

  <arg name="publish_freq" default="10.0" doc="LiDAR publish frequency (Hz)"/>
  <arg name="rviz" default="true" doc="Launch RVIZ visualization"/>

  <!-- Livox Mid360 Driver -->
  <include file="$(find livox_ros_driver2)/launch/msg_MID360.launch">
    <arg name="publish_freq" value="$(arg publish_freq)"/>
    <arg name="rviz_enable" value="false"/>
    <arg name="rosbag_enable" value="false"/>
  </include>

  <!-- RVIZ for driver testing -->
  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" 
          args="-d $(find livox_ros_driver2)/rviz_cfg/MID360.rviz" />
  </group>

</launch>
